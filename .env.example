# ======================
# PostgreSQL Configuration
# ======================
POSTGRES_DB=web_assessment
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Database URL (used by Django)
# For Docker: postgres://user:password@db:5432/database_name
# For Local: postgres://user:password@localhost:5432/database_name
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# ======================
# Redis Configuration
# ======================
REDIS_HOST=redis
REDIS_PORT=6379

# Celery Configuration (uses Redis)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ======================
# Django Settings
# ======================
DJANGO_SECRET_KEY=your_django_secret_key_here_change_in_production
DEBUG=False
DEVELOPMENT_MODE=False
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000


# Site Configuration
SITE_URL=http://localhost:8000

# ======================
# Django Superuser (Auto-created on first run)
# ======================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# ======================
# Email Configuration (SMTP)
# ======================
EMAIL_HOST=smtp.example.com
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_PORT=587
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@example.com

# ======================
# Docker Configuration
# ======================
# Internal network name for Docker services
DOCKER_NETWORK_NAME=web_assessment_network

# Port Mappings (only WEB_PORT is exposed to localhost)
WEB_PORT=8000